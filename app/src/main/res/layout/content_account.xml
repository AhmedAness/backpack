<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="-50dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_60sdp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingEnd="@dimen/_16sdp"
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_80sdp">

            <com.loopeer.shadow.ShadowView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="70dp"
                app:shadowMarginBottom="5dp"
                app:shadowMarginTop=".3dp"
                app:shadowMarginRight="1dp"
                app:shadowMarginLeft="1dp"

                app:shadowColor="#4a000000"
                app:cornerRadius="4dp"
                app:shadowRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/edit_user_name"
                        android:text="mahmoud rashad"
                        android:background="@null"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/BigTextaccount" />

                    <TextView
                        android:id="@+id/edit_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:text="@string/edit_btn"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/editcoloraccount" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/editcoloraccount" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <EditText
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/edit_user_phone"
                        android:background="@null"
                        android:text="+9661 2122255"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/BigTextaccount" />

                    <TextView
                        android:id="@+id/edit_user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:text="@string/edit_btn"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/editcoloraccount" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/editcoloraccount" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <EditText
                        android:id="@+id/user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:background="@null"
                        android:layout_toStartOf="@id/edit_email"
                        android:text="mahmoud.rashad7010@gmail.com"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/BigTextaccount" />

                    <TextView
                        android:id="@+id/edit_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:text="@string/edit_btn"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/editcoloraccount" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/editcoloraccount" />

            </LinearLayout>

            </com.loopeer.shadow.ShadowView>


            <RelativeLayout
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/checck_id_verify"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/check_mark" />

                <TextView
                    android:id="@+id/id_verify_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/checck_id_verify"
                    android:drawableEnd="@drawable/arrow_to_right_gray"
                    android:text="ID Verfication"

                    android:textColor="@color/BigTextColor"
                    android:textSize="@dimen/text_large" />

                <TextView
                    android:id="@+id/id_verify_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_verify_txt"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/checck_id_verify"
                    android:text="National ID or passport"
                    android:textColor="@color/editcoloraccount"
                    android:textSize="@dimen/text_medium" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#3B979797" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/check_deceleration_verify"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/check_mark" />

                <TextView
                    android:id="@+id/id_deceleration_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/check_deceleration_verify"
                    android:drawableEnd="@drawable/arrow_to_right_gray"
                    android:text="Deceleration"

                    android:textColor="@color/BigTextColor"
                    android:textSize="@dimen/text_large" />

                <TextView
                    android:id="@+id/id_deceleration_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_deceleration_txt"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/check_deceleration_verify"
                    android:text="Chlorinc illness,allargies,surgriess..."
                    android:textColor="@color/editcoloraccount"
                    android:textSize="@dimen/text_medium" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#3B979797" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/check_license_verify"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/check_mark" />

                <TextView
                    android:id="@+id/id_license_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/check_license_verify"
                    android:drawableEnd="@drawable/arrow_to_right_gray"
                    android:text="License"

                    android:textColor="@color/BigTextColor"
                    android:textSize="@dimen/text_large" />

                <TextView
                    android:id="@+id/id_license__desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_license_txt"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/check_license_verify"
                    android:text="Driving License,Diving License"
                    android:textColor="@color/editcoloraccount"
                    android:textSize="@dimen/text_medium" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#3B979797"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center_horizontal"
                android:src="@color/gray"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="@dimen/_3sdp"
                app:civ_circle_background_color="@color/gray" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_40sdp"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_circle_background_color="@color/white"
                app:civ_border_width="@dimen/_1sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="end|bottom"
                android:src="@color/zxing_transparent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/edit_image"
                android:layout_width="@dimen/_40sdp"
                app:civ_circle_background_color="@color/white"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="end|bottom"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/camera_icon_profile" />
        </FrameLayout>

        <ImageView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp" />
    </FrameLayout>
</android.support.v4.widget.NestedScrollView>