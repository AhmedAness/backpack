<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_10sdp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
<LinearLayout
    android:id="@+id/f"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_100sdp"
    android:orientation="horizontal">

    <com.loopeer.shadow.ShadowView
        android:id="@+id/shadow_activity_img"
        android:layout_width="@dimen/_100sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_height="match_parent"
        android:elevation="70dp"
        app:shadowMarginBottom="5dp"
        app:shadowColor="#4a000000"
        app:cornerRadius="6dp"
        app:shadowRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layoutDirection="ltr"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/activity_img"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher" />
            <LinearLayout
                android:layoutDirection="ltr"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#BABABA"
                    android:background="@color/white"
                    android:gravity="right|center_vertical"
                    android:paddingRight="20dp" />

            </LinearLayout>
        </LinearLayout>

    </com.loopeer.shadow.ShadowView>
    <LinearLayout
        android:layout_toEndOf="@id/shadow_activity_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_weight="1"
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingEnd="@dimen/_16ssp"
        android:paddingStart="@dimen/_16ssp"
        android:textColor="#4A4A4A"
        android:textSize="@dimen/_18ssp"
        tools:text="Heking in Heluis" />

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/item_name"
        android:layout_weight="1"
        android:paddingEnd="@dimen/_16ssp"
        android:paddingStart="@dimen/_16ssp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#9B9B9B"
        android:textSize="@dimen/_14ssp"
        android:text="@string/dummy_location" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/location_country"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/location"
        android:textColor="#9B9B9B"
        android:paddingEnd="@dimen/_16ssp"
        android:paddingStart="@dimen/_16ssp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textSize="@dimen/_12ssp"
        android:text="@string/dummy_country_locatio" />
    <TextView
        android:id="@+id/organization_name"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#9B9B9B"
        android:layout_below="@+id/location_country"
        android:paddingEnd="@dimen/_16ssp"
        android:paddingStart="@dimen/_16ssp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textSize="@dimen/_12ssp"
        android:text="@string/dummy_povider" />
    </LinearLayout>
</LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:layout_below="@+id/f"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="#3B979797"/>

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/date_txt"
        android:textColor="#9B9B9B"
        android:textSize="@dimen/_16ssp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
    <TextView
        android:id="@+id/date_txt"
        android:textColor="#9B9B9B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:textSize="@dimen/_16ssp"

        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/date_txt"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="#3B979797" />

    <TextView
        android:id="@+id/TICKETS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:textColor="#9B9B9B"

        android:text="@string/tickets"
        android:textSize="@dimen/_16ssp"

        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
    <TextView
        android:id="@+id/tickets_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginStart="@dimen/_16sdp"
        android:textColor="#9B9B9B"
        android:gravity="end"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:textSize="@dimen/_16ssp"

        android:layout_alignParentEnd="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tickets_count"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textSize="@dimen/_16ssp"

        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="#3B979797" />

    <TextView
        android:id="@+id/TIME0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:layout_marginStart="@dimen/_16sdp"
        android:textColor="#9B9B9B"

        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/time_txt"
        android:textSize="@dimen/_16ssp"

        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
    <TextView
        android:id="@+id/time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_alignParentEnd="true"
        android:paddingEnd="@dimen/_14sdp"
        android:textColor="#9B9B9B"
        android:textSize="@dimen/_16ssp"
        android:gravity="end"
        android:text="3:00 pm - 12:00 am"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/time_txt"

        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="#3B979797" />

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layoutDirection="ltr"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"

            >

            <com.loopeer.shadow.ShadowView
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:elevation="70dp"
                app:shadowMarginBottom="5dp"
                app:shadowColor="#4a000000"
                app:cornerRadius="6dp"
                app:shadowRadius="20dp">
            <RelativeLayout
                android:id="@+id/card2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:background="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:weightSum="2">


                    <TextView
                        android:id="@+id/item_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/dummy_price"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/counter"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/dummy_count"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>
            </RelativeLayout>
            </com.loopeer.shadow.ShadowView>

            <Button
                android:id="@+id/Confirm_btn"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="@dimen/_10sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:text="@string/confirm_btn"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="#DEFFFFFF"

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
