<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">
    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="70dp"
        app:shadowMarginBottom="3.5dp"
        app:shadowMarginRight="1dp"
        app:shadowMarginLeft="1dp"
        app:shadowMarginTop=".2dp"
        app:shadowColor="#C5C5C5"
        app:cornerRadius="6dp"
        app:shadowRadius="20dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">


    <TextView
        android:id="@+id/backpacker_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="backPacker No.2"
        android:textColor="@color/editcoloraccount"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/textView3"
        android:textColor="#C5C5C5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="Who's going with you? "
        android:textSize="@dimen/text_small" />

    <RelativeLayout
        android:id="@+id/owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Your Information"
            android:textColor="@color/editcoloraccount"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button"
            android:textColor="#C5C5C5"
            android:layout_toStartOf="@id/checkBox"
            android:text="you are going to this Activity  and the ticket will be in your user_name"
            android:textSize="@dimen/text_small" />
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/backpacker_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:backgroundTint="#C5C5C5"
            android:layout_height="wrap_content"
            android:textColorHint="#C5C5C5"
            android:textColor="@color/bg_text_color"
            android:hint="Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/backpacker_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:textColorHint="#C5C5C5"
            android:backgroundTint="#C5C5C5"
            android:textColor="@color/bg_text_color"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Mobile No." />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/backpacker_email"
            android:textColorHint="#C5C5C5"
            android:textColor="@color/bg_text_color"
            android:layout_width="match_parent"
            android:backgroundTint="#C5C5C5"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email (optional)" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/add_ones"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/category_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone" />
    </LinearLayout>
    </com.loopeer.shadow.ShadowView>

</LinearLayout>