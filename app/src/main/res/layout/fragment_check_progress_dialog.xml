<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_margin="@dimen/_16sdp"
    android:background="#eee"

    android:padding="@dimen/_5sdp"
    tools:context=".fragment.CheckProgressDialog">

    <ImageView
        android:id="@+id/progress_dialog_dismiss"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_close_gray" />

    <TextView
        android:id="@+id/progress_dialod_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@+id/progress_dialog_dismiss"
        android:text="Your Account is 75% Complete"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/progress_dialog_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_dialod_title"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@+id/progress_dialog_dismiss"
        android:text="Missing information is required for some activites.\nComplete it Now and save Some Time"
        android:textColor="@color/black"
        android:textSize="@dimen/text_small" />

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/progress"
        android:layout_below="@+id/progress_dialog_desc"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_height="@dimen/_28sdp">


    </ImageView>

</RelativeLayout>