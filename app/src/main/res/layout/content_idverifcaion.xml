<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".IDVerifcaionActivity"
    tools:showIn="@layout/activity_idverifcaion">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:padding="@dimen/_20sdp"
        android:id="@+id/container111"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:textColor="#737373"
        android:layout_height="wrap_content"
        android:text="@string/date_of_birth" />

    <EditText
        android:layout_marginTop="7px"
        android:id="@+id/date_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:background="@null"
        android:layout_marginBottom="@dimen/_5sdp"
        android:drawableEnd="@drawable/calender_gray"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:inputType="date" />

        <View
            android:id="@+id/fL"
            android:layout_below="@+id/date_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#3B979797" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:textColor="#737373"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fL"
        android:text="@string/gender" />

    <Spinner
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7px"
        android:layout_below="@+id/textView8"
        android:layout_marginBottom="@dimen/_5sdp"
        android:entries="@array/gender_array" />


        <View
            android:id="@+id/fL2"
            android:visibility="gone"
            android:layout_below="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#3B979797" />

    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:textColor="#737373"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fL2"
        android:text="Nationality" />

    <Spinner
        android:id="@+id/nationality"
        android:layout_width="match_parent"
        android:layout_marginTop="7px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginBottom="@dimen/_5sdp" />

        <View
            android:id="@+id/fL3"
            android:layout_below="@+id/nationality"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#3B979797" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fL3"
        android:textColor="#737373"
        android:text="Identification type" />

    <Spinner
        android:id="@+id/identity_type"
        android:layout_width="match_parent"
        android:layout_marginTop="7px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_marginBottom="@dimen/_5sdp"
        android:entries="@array/nationality_type_array" />

        <View
            android:id="@+id/fL4"
            android:layout_below="@+id/identity_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#3B979797" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fL4"
        android:textColor="#737373"
        android:text="Identification number" />

    <EditText
        android:id="@+id/id_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="7px"
        android:background="@null"
        android:layout_marginBottom="@dimen/_5sdp"
        android:ems="10"
        android:hint="What's your ID number ?"
        android:inputType="textPersonName" />

        <View
            android:id="@+id/fL5"
            android:layout_below="@+id/id_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#3B979797" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#737373"
        android:layout_below="@+id/fL5"
        android:text="Expire Date" />

    <EditText
        android:id="@+id/expire_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="7px"
        android:background="@null"
        android:drawableEnd="@drawable/calender_gray"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:inputType="date" />

        <View
            android:id="@+id/fL6"
            android:layout_below="@+id/expire_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#3B979797" />
    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#737373"
        android:layout_below="@+id/fL6"
        android:text="@string/upload_your_id" />

    <EditText
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="7px"
        android:background="@null"
        android:drawableEnd="@drawable/camera_icon_profile"
        android:ems="10"
        android:hint="pic.jbg"
        android:inputType="date" />

        <ImageView
            android:layout_width="250dp"
            android:visibility="gone"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/id_image"
            android:layout_below="@+id/photo" />
        <View
            android:id="@+id/fL7"
            android:layout_below="@+id/id_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#3B979797" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <Button
                android:id="@+id/Confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="@string/save_btn"
                android:textAllCaps="false"
                android:textSize="@dimen/_20sdp"
                android:textColor="#DEFFFFFF"
                android:textStyle="bold" />
        </FrameLayout>

    </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>