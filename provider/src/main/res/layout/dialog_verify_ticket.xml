<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_30sdp"
    android:layout_marginEnd="@dimen/_30sdp"
    android:layout_gravity="center"
    android:paddingTop="@dimen/_10sdp"
    android:background="@drawable/board2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eman" />
    <TextView
        android:layout_width="wrap_content"
        android:text=""
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ticket_number"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Ticket No." />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <CheckBox
        android:id="@+id/price"
        android:visibility="gone"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/Gray_Dolphin"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:text="SR 150 is paid and ready to check in" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_ticket_has_a_balance_of_150_sar_and_isn_t_paid_yet_pay_it_now"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="@color/gray"
        ></LinearLayout>

    <TextView
        android:id="@+id/Add_addons_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:gravity="center"
        android:text="Pay 150 SR "
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:padding="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/next"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_account"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/view_invoice" />


        <TextView
            android:id="@+id/Add_addons_btn1"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_weight="1"   android:layout_height="@dimen/_30sdp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_gravity="center"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_5sdp"

            android:gravity="end|center_vertical"
            android:text="@string/check_in"
            android:textStyle="bold"
            android:textColor="@color/Platinum" />



    </LinearLayout>

</LinearLayout>