<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_30sdp"
    android:layout_marginEnd="@dimen/_30sdp"
    android:layout_gravity="center"
    android:background="@drawable/board2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/bg_color_text"

        app:popupTheme="@style/AppTheme.AppBarOverlay"
        app:title="@string/add_add_ons" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/gray"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:id="@+id/add_ones"
        android:padding="20dp"/>

    <EditText
        android:backgroundTint="@color/background_transparent"
        android:id="@+id/Add_addons"
        android:textColor="@color/footer_color_text"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:hint="@string/add_add_ons"
        android:lines="1" />

    <TextView
        android:id="@+id/Add_addons_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_gravity="center"
        android:background="@drawable/next"
        android:gravity="center"
        android:text="@string/add"
        android:textColor="@color/white" />

</LinearLayout>