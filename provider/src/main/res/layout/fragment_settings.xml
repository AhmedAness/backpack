            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/private_Groups"
                android:textColor="@color/bg_color_text"
                android:gravity="start"
                android:layout_gravity="start"
                android:textSize="@dimen/min_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/ac_private_Groups_price"
                    android:text="SAR 2500"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@color/bg_color_text"
                    android:textSize="@dimen/min_text_size"

                    android:textStyle="bold" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/gray" />

            <!--///////////////////////-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_color_text"
                    android:layout_weight="5"
                    android:text="@string/organisers"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textSize="@dimen/big_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_weight="2"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:id="@+id/organisers_edit_btn"
                        android:background="@drawable/edit_boarder"
                        android:gravity="center"
                        android:text="@string/Edit"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:text="@string/is_there_some_one_helping_you_to_organize_the_activity_invent_them"
                android:textColor="@color/gray"
                android:textSize="@dimen/min_text_size" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="@string/admins"
                    android:textColor="@color/bg_color_text"
                    android:textSize="@dimen/min_text_size"

                    android:textStyle="bold" />
                <TextView
                    android:layout_gravity="end"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="@string/can_edit_activity"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/min_text_size" />
            </LinearLayout>
            <GridLayout
                android:id="@+id/admins_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mahmoud rashad"
                android:visibility="gone"
                android:textColor="@color/bg_color_text"
                android:textSize="@dimen/min_text_size"

                android:textStyle="bold" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="@string/organizer"
                    android:textColor="@color/bg_color_text"
                    android:textSize="@dimen/min_text_size"

                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:text="@string/can_add_confirm_booking_only"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/min_text_size" />


            </LinearLayout>

            <GridLayout
                android:id="@+id/organizer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mahmoud rashad"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/min_text_size"

                android:textStyle="bold" />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samy Ahmed"
            android:textColor="@color/black"
            android:textSize="@dimen/min_text_size"

            android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>