                <ImageButton
                    android:id="@+id/balance_switch"
                    android:layout_width="wrap_content"
                    android:minHeight="@dimen/_50sdp"
                    android:minWidth="@dimen/_66sdp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/payment_switch" />

                        <Switch
                            android:id="@+id/ac_status"
                            android:layout_width="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:visibility="gone"
                            android:background="@drawable/edit_boarder"
                            android:checked="true"
                            android:switchMinWidth="@dimen/_50sdp"
                            android:track="@drawable/switch_track_custom"
                            android:thumb="@drawable/switch_thumb_custom"
                            android:textOn="@string/on"
                            android:showText="true"
                            android:textOff="@string/off"
