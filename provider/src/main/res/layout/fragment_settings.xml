                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_gravity="start"
                    android:text="@string/this_activity_can_be_seen_and_checked_now"
                    android:textColor="@color/gray" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="#a6a6a6" />

<!--/////////////////////////////////////////-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start"
                    android:textColor="@color/bg_color_text"
                    android:text="@string/booking_prefrences"
                    android:textSize="@dimen/big_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:id="@+id/booking_prefrences_edit_btn"
                        android:background="@drawable/edit_boarder"
                        android:gravity="center"
                        android:text="@string/Edit"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>
            </LinearLayout>



            <TextView
