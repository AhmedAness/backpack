                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:id="@+id/length_and_capacity_edit_btn"
                        android:background="@drawable/edit_boarder"
                        android:gravity="center"
                        android:text="@string/Edit"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/activity_length"
                android:gravity="start"
                android:layout_gravity="start"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/med_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:text="@string/how_long_does_this_activity_lasts_for"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/min_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="start"
                android:id="@+id/ac_activity_length"
                android:layout_gravity="start"
                android:text="6 Hrs"
                android:textColor="@color/bg_color_text"
                android:textSize="@dimen/min_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
