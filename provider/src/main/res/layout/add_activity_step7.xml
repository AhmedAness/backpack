<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_12sdp"
    android:paddingHorizontal="@dimen/_12sdp"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/footer_color_text"
            android:textSize="@dimen/min_text_size"
            android:text="@string/availability_disc1" />

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/footer_color_text"
            android:textSize="@dimen/min_text_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/availability_disc2" />

        <View
            android:layout_below="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="#3B979797"/>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/availability_Recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/Add_availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add_circel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/add_available_time"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>