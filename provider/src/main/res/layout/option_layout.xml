<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox"
        android:textColor="@color/bg_color_text"
        android:buttonTint="@color/bg_color_text"
        android:layout_centerVertical="true"
        android:text="@string/kids_btn" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/checkbox"
        android:id="@+id/has_age"
        android:visibility="invisible">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/age_from"
        android:text="@string/age_txt"
        android:textColor="@color/gray" />

    <EditText
        android:backgroundTint="@color/background_transparent"
        android:id="@+id/age_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/textView3"
        android:ems="2"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/age_to"
        android:text="to"
        android:textColor="@color/gray" />

    <EditText
        android:backgroundTint="@color/background_transparent"
        android:id="@+id/age_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:ems="2"
        android:inputType="numberSigned" />

    </RelativeLayout>
</RelativeLayout>

        