<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="@dimen/_12sdp"
    android:layout_height="match_parent"
    >
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_16sdp"
    android:paddingRight="@dimen/_16sdp"
    tools:context=".Fragments.Add_new_Activity.StepStatus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/border_black"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/activity_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_16sdp"

                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/bg_color_text"
                android:text="ActivityInfo" />

            <TextView
                android:id="@+id/complete_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:visibility="invisible"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimary"
                android:text="@string/complete"
 />
        </LinearLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/step1"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/footer_color_text"

            android:text="@string/titleandtypeanddescription"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <ImageButton
            android:id="@+id/step1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:background="@color/background_transparent"

            android:src="@drawable/check_mark" />

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/step2"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/footer_color_text"

                android:text="@string/photos"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/step2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="invisible"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_10sdp"
                android:background="@color/background_transparent"
                android:src="@drawable/check_mark" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/step3"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/footer_color_text"

                android:text="@string/Add_add_ons"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/step3"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:background="@color/background_transparent"
                android:visibility="invisible"
                android:src="@drawable/check_mark" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/step4"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/footer_color_text"

                android:text="@string/location"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/step4"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:background="@color/background_transparent"
                android:src="@drawable/check_mark"

                android:visibility="invisible" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/step5"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/footer_color_text"

                android:text="@string/rulesandrequirment"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/step5"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentStart="true"
android:visibility="invisible"
                android:background="@color/background_transparent"

                android:src="@drawable/check_mark" />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/border_black"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/setting_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/bg_color_text"
                android:textSize="@dimen/_16sdp"
                android:text="@string/complete_booking_setting_title" />

            <TextView
                android:id="@+id/complete_flag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:visibility="invisible"
                android:gravity="end"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimary"
                android:text="@string/complete"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/step6"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/footer_color_text"

                android:text="@string/booking_prefrences"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/step6"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentStart="true"
android:visibility="invisible"
                android:background="@color/background_transparent"

                android:src="@drawable/check_mark" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/step7"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/footer_color_text"

                android:text="@string/availability"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/step7"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentStart="true"
android:visibility="invisible"
                android:background="@color/background_transparent"

                android:src="@drawable/check_mark" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/step8"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/footer_color_text"

                android:text="@string/length_and_capacity"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/step8"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentStart="true"
android:visibility="invisible"
                android:background="@color/background_transparent"

                android:src="@drawable/check_mark" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/step9"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/footer_color_text"

                android:text="@string/pricing"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/step9"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentStart="true"
android:visibility="invisible"
                android:background="@color/background_transparent"

                android:src="@drawable/check_mark" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/step10"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/footer_color_text"
                android:text="@string/rulesandrequirment"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageButton
                android:id="@+id/step10"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:visibility="invisible"
                android:background="@color/background_transparent"

                android:src="@drawable/check_mark" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>