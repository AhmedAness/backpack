<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/addone_boared"
    android:layout_margin="@dimen/_10sdp"
    android:padding="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/s"
        android:layoutDirection="ltr"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_text_size"
            android:gravity="start"
            android:textStyle="bold"
            android:id="@+id/name"
            android:textColor="@color/black"
            android:text="@string/Food"/>

        <ImageButton
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/remove"
            android:layout_alignEnd="@+id/name"
            android:foregroundGravity="right"
            android:layout_alignRight="@+id/name"
            android:background="@color/background_transparent"
            android:src="@drawable/close"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



    </LinearLayout>


    <EditText
        android:backgroundTint="@color/background_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="@dimen/med_text_size"
        android:layout_below="@id/s"
        android:textStyle="bold"
        android:id="@+id/description"
        android:hint="@string/description" />

    <LinearLayout
        android:id="@+id/con"
        android:layout_weight="100"
        android:layout_below="@id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="@string/Price"
                android:textColor="@color/black"
                android:textSize="@dimen/med_text_size"
                android:textStyle="bold" />

            <EditText
                android:backgroundTint="@color/background_transparent"
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/price_lable"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:hint="0.0"
                android:textSize="@dimen/med_text_size" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/med_text_size"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:id="@+id/Provider_lable"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/Provider"/>
            <EditText
                android:backgroundTint="@color/background_transparent"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:layout_toEndOf="@+id/Provider_lable"
                android:textSize="@dimen/med_text_size"
                android:layout_height="wrap_content"
                android:id="@+id/Provider" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>