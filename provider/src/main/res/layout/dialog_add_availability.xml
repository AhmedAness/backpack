        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/activity_Start"
                android:layout_centerVertical="true"
                android:id="@+id/start_lable"
                android:minWidth="@dimen/_50sdp"
                android:textColor="@color/bg_color_text"
                android:textSize="@dimen/big_text_size"
                android:textStyle="bold"

                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_toEndOf="@+id/start_lable"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:hint="Day"

                    android:inputType="date"
                    android:id="@+id/start_date"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"

                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="/"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:hint="HH:MM"
                    android:inputType="time"

                    android:id="@+id/start_time"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/end"
                android:id="@+id/end_lable"
                android:minWidth="@dimen/_50sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/big_text_size"
                android:textColor="@color/bg_color_text"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_toEndOf="@+id/end_lable"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:hint="Day"
                    android:inputType="date"
                    android:id="@+id/end_date"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"

                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="/"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:hint="HH:MM"
                    android:inputType="time"
                    android:id="@+id/end_time"
                    android:layout_height="wrap_content" />
            </LinearLayout>




        </RelativeLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/Add_addons_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/next"
        android:textColor="@color/white"
        android:padding="@dimen/_10sdp"
        android:layout_gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center"
        android:text="@string/add"
        />

