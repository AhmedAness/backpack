<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/background_transparent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/boardr"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:text="@string/add_available_time"
            android:paddingHorizontal="30dp"
            android:textSize="@dimen/big_text_size"
            android:background="@color/white"
            android:textColor="@color/bg_color_text"
            android:textStyle="bold"

            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="2dp">
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q1"
            android:textColor="@color/bg_color_text"
            android:textSize="@dimen/med_text_size"
            android:textStyle="bold"
            android:background="@color/white"

            />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/individuals"
            android:textColor="@color/bg_color_text"
            android:id="@+id/individual_box7" />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/private_Groups"
            android:textColor="@color/bg_color_text"
            android:id="@+id/private_box7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q2"
            android:textColor="@color/bg_color_text"
            android:textSize="@dimen/med_text_size"
            android:textStyle="bold"
            android:background="@color/white"

            />

